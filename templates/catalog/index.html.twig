{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}
{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/catalog.css')}}">
			

			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		{% endblock %}
{% block body %}
    <h1>Catalogue des lieux répertoriés dans la catégorie {{categorie.nom}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for toto in lieus %}
            <tr>
                <td>{{ toto.id }}</td>
                <td>{{ toto.nom }}</td>
                <td>{{ toto.adresse }}</td>
                <td>{{ toto.codePostal }}</td>
                <td>{{ toto.description }}</td>
                <td>
                    <img class="w-100" src="{{asset('uploads/' ~ toto.image )}}"/>
                </td>
                <td>
                    <a href="{{ path('catalog_show', {'id': toto.id}) }}">montrer</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
