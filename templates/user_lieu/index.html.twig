{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset ('css/catalog.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}
<main>
    <h1 class="test">Lieu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.adresse }}</td>
                <td>{{ lieu.codePostal }}</td>
                <td>{{ lieu.description }}</td>
                <td>{{ lieu.image }}</td>
                <td>
                    <a href="{{ path('user_lieu_show', {'id': lieu.id}) }}">montrer</a>
                    <a href="{{ path('user_lieu_edit', {'id': lieu.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_lieu_new') }}">Cr√©er un nouveau lieu</a>
    </main>
{% endblock %}
