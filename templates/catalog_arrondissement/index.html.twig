                <th>CodePostal</th>
                <th>Description</th>
                <th>Image</th>
                
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.adresse }}</td>
                <td>{{ lieu.codePostal }}</td>
                <td>{{ lieu.description }}</td>
                <td><img class="w-100" src="{{asset('uploads/' ~ lieu.image )}}"/></td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
