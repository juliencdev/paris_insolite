{% extends 'base.html.twig' %}

{% block title %}Détail du commentaire{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset ('css/index.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <h1>Détail du commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>Creation</th>
                <td>{{ commentaire.creation ? commentaire.creation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_commentaire_index') }}">retour à la liste</a>

    <a href="{{ path('user_commentaire_edit', {'id': commentaire.id}) }}">modifier</a>

    {{ include('user_commentaire/_delete_form.html.twig') }}
{% endblock %}
